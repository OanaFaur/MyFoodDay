@model MyFoodDayWeb.Models.DailyIntake

@{
    ViewData["Title"] = "DailyIntake";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <link rel="stylesheet" media="screen" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>
</head>

<table class="table">


    <h1>View your Intake</h1>

    <form asp-controller="Products" asp-action="DailyIntakeView" method="post">
        Choose your date: <input type="text" id="txtIntakeDate" name="datetime" class="startDate form-control" />
        <input type="submit" value="Submit" class="btn btn-primary" />
        <table class="table">
            <thread>
                <tr>
                    <th colspan="3" style="text-align:center">@Html.DisplayFor(modelItem => modelItem.DateTime)</th>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CalorieNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProteinNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model=>model.Fats)
                    </th>
                </tr>
            </thread>

            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.CalorieNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.ProteinNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Fats)
                    </td>
                </tr>
            </tbody>

        </table>
    </form>
</table>

<script type="text/javascript">
    $(function () {
        $(".datetime").datepicker({ dateFormat: 'M/dd/yy' });
    });
</script>
