@model MyFoodDayWeb.Models.DailyIntake

@{
    ViewData["Title"] = "DailyIntake";
}
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>
</head>

<table class="table">


    <h1>View your Intake</h1>

    <form asp-controller="Product" asp-action="DailyIntake" method="post">
        Choose your date: 
        <input type="text" id="datepicker" name="dateTime" placeholder="Select a date" style="width: 150px;">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <table class="table">
            <thread>
                <tr>
                    <th colspan="3" style="text-align:center">
                        <a href="?dateTime=@(Model.DateTime != null ? Model.DateTime.Value.AddDays(-1).ToString("yyyy-MM-dd") : DateTime.Today.AddDays(-1).ToString("yyyy-MM-dd"))">&#x2190;</a>
                        @((Model.DateTime ?? DateTime.Today).ToString("M/d/yyyy"))
                        <a href="?dateTime=@(Model.DateTime != null ? Model.DateTime.Value.AddDays(+1).ToString("yyyy-MM-dd") : DateTime.Today.AddDays(+1).ToString("yyyy-MM-dd"))">&#x2190;</a>
                        </th>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CalorieNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProteinNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model=>model.Fats)
                    </th>
                </tr>
            </thread>

            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.CalorieNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.ProteinNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Fats)
                    </td>
                </tr>
            </tbody>

        </table>
    </form>
</table>

<script>
    flatpickr("#datepicker", {
        dateFormat: "M/d/Y",
       
    });


</script>
